<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GestorFX.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Iniciar Sesión en ArtExpo">
      <font>
         <Font size="36.0" />
      </font>
   </Text>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Accede a tu cuenta para disfrutar de todas las funcionalidades">
      <font>
         <Font size="13.0" />
      </font>
   </Text>
   <Label prefWidth="1.0" />
   <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="195.0" promptText="Nombre de usuario o correo" />
   <TextField fx:id="passwordField" prefHeight="25.0" prefWidth="195.0" promptText="Contraseña" />
   <Text fx:id="errorField" fill="#b40000" strokeType="OUTSIDE" strokeWidth="0.0" text="Error" visible="false">
      <font>
         <Font size="13.0" />
      </font>
   </Text>
    <Button fx:id="iniciarButton" onAction="#onIniciarButtonClick" text="Iniciar Sesion" />
   <Hyperlink fx:id="restablecerButton" onAction="#onRestablecerButtonClick" text="Restablecer contraseña" />
</VBox>
